{
    "editor.codeActionsOnSave": null,
    "workbench.colorTheme": "Default Light+",
    "editor.bracketPairColorization.enabled": true,
    "files.autoSave": "off",
    "workbench.editor.enablePreview": false,
    "terminal.integrated.cursorStyle": "line",
    "editor.trimAutoWhitespace": false,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "typescript.updateImportsOnFileMove.enabled": "always",
    
    // https://i.stack.imgur.com/9UVnC.png
    "workbench.colorCustomizations": {
        "terminal.selectionBackground": "#ffffff6e",
        "terminal.background":"#000000",
        "terminal.foreground":"#C0C0C0",
        "terminalCursor.background":"#C0C0C0",
        "terminalCursor.foreground":"#C0C0C0",
        "terminal.ansiBlack":"#000000",
        "terminal.ansiBrightBlack":"#686868",
        "terminal.ansiBlue":"#1818b2",
        "terminal.ansiBrightBlue":"#5454ff",
        "terminal.ansiCyan":"#18b2b2",
        "terminal.ansiBrightCyan":"#54ffff",
        "terminal.ansiGreen":"#18b218",
        "terminal.ansiBrightGreen":"#54ff54",
        "terminal.ansiMagenta":"#b218b2",
        "terminal.ansiBrightMagenta":"#ff54ff",
        "terminal.ansiRed":"#b21818",
        "terminal.ansiBrightRed":"#ff5454",
        "terminal.ansiWhite":"#b2b2b2",
        "terminal.ansiBrightWhite":"#ffffff",
        "terminal.ansiYellow":"#ffc706",
        "terminal.ansiBrightYellow":"#ffff54"
    },
    
    "terminal.integrated.sendKeybindingsToShell": true,
    "editor.wordWrap": "on",
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    "files.exclude": {
        "**/.DS_Store": false,
        "**/.git": false,
        "**/.hg": false,
        "**/.svn": false,
        "**/CVS": false
    },
    "telemetry.enableTelemetry": false,
    "explorer.autoReveal": false,
    "bookmarks.navigateThroughAllFiles": false,
    "html.autoClosingTags": false,
    "javascript.autoClosingTags": false,
    "typescript.autoClosingTags": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": true,
    "jupyter.experiments.optOutFrom": ["NativeNotebookEditor"]
}